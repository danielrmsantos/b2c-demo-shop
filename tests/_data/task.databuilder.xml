<?xml version="1.0"?>
<transfers
    xmlns="spryker:databuilder-01"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="spryker:databuilder-01 http://static.spryker.com/databuilder-01.xsd"
>

    <transfer name="Task" strict="true">
        <property name="title" dataBuilderRule="unique()->text(10)"/>
        <property name="description" dataBuilderRule="unique()->text(10)"/>
        <property name="status" dataBuilderRule="randomElement(['to-do', 'in-progress'])"/>
        <property name="dueDate" dataBuilderRule="dateTimeInInterval('-1 day', '+1 day')->format('Y-m-d')"/>
    </transfer>

    <transfer name="TaskCollectionRequest" strict="true">
        <property name="tasks" dataBuilderRule="Task[]"/>
    </transfer>

</transfers>
